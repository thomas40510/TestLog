<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.example.administrateur.testlog.NewPony">

    <!--name-->
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Nom"
        android:inputType="textNoSuggestions"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--Sexe-->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:text="Sexe : " />
    <Spinner
        android:id="@+id/Sspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bDate"
        android:layout_alignTop="@+id/textView15"
        android:layout_toStartOf="@+id/textView12" />

    <!--birthdate-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        android:text="Birthdate : " />

    <EditText
        android:id="@+id/bDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/proprio"
        android:hint="aaaa"
        android:inputType="textNoSuggestions|number"
        android:textSize="14sp" />

    <!--proprio-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/proprio"
        android:layout_alignBottom="@+id/proprio"
        android:layout_alignParentStart="true"
        android:text="Proprio : " />

    <EditText
        android:id="@+id/proprio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bDate"
        android:layout_toEndOf="@+id/textView9"
        android:hint="Prénom NOM"
        android:inputType="textNoSuggestions"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/proprio"
        android:layout_alignBottom="@+id/proprio"
        android:layout_toEndOf="@+id/proprio"
        android:text="club" />

    <!--maréchal-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastnico"
        android:layout_alignBottom="@+id/lastnico"
        android:layout_alignParentStart="true"
        android:text="Dernier maréchal :" />

    <EditText
        android:id="@+id/lastnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/limhr"
        android:layout_toEndOf="@+id/textView4"
        android:hint="dd/mm/aaaa"
        android:inputType="textNoSuggestions|date"
        android:textSize="14sp" />

    <!--maxHours-->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/limhr"
        android:layout_alignBottom="@+id/limhr"
        android:layout_alignParentStart="true"
        android:text="Max hr/sem : " />

    <EditText
        android:id="@+id/limhr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proprio"
        android:layout_toEndOf="@+id/textView9"
        android:hint="entier naturel"
        android:inputType="textNoSuggestions|number"
        android:textSize="14sp" />

    <!--emptyText (formatting)-->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastnico"
        android:layout_toStartOf="@+id/lastnico" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:text="" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15" />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:textSize="12sp" />

    <!--type-->
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Tspinner"
        android:text="Catégorie : " />
    <Spinner
        android:id="@+id/Tspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Sspinner"
        android:layout_below="@+id/textView12"
        android:layout_toStartOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView18" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="save"
        android:text="Confirmer" />

    <!--rations (tableau)-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView7">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <!-- Row 1 with single column -->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rations :" />
            </TableRow>

            <!-- Row 2 with 3 columns -->
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/TextView40"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:gravity="center"
                    android:padding="20dip"
                    android:text="Matin"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/TextView50"
                    android:layout_weight="1"
                    android:background="#d3d3d3"
                    android:gravity="center"
                    android:padding="20dip"
                    android:text="Midi"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/TextView60"
                    android:layout_weight="1"
                    android:background="#cac9c9"
                    android:gravity="center"
                    android:padding="20dip"
                    android:text="Soir"
                    android:textColor="#000000" />

            </TableRow>

            <!-- Row 3 with 3 columns -->
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/rationMt"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="n Litres"
                    android:inputType="numberDecimal"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/rationMd"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="n Litres"
                    android:inputType="numberDecimal"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText

                    android:id="@+id/rationS"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="n Litres"
                    android:inputType="numberDecimal"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </TableRow>
        </TableLayout>

    </RelativeLayout>






</RelativeLayout>