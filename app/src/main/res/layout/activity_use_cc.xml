<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UseCc"
    android:layout_margin="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/saisieCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="2019xxx"
        android:inputType="number" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/saisieCarte"
        android:onClick="verifnumber"
        android:text="Confirmer" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saisieCarte"
        android:layout_marginTop="2dp"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:text="Utiliser la carte cadeau"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/infosLayout"
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:layout_above="@id/btnUse"
        android:layout_below="@id/textView64"
        android:visibility="invisible">

        <TextView
            android:id="@+id/cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="Carte n°2019xxx"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardnumber" />

        <TextView
            android:id="@+id/cardinfos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView66"
            android:text="TextView" />

    </RelativeLayout>

</RelativeLayout>